<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="library_editorial_tree" model="ir.ui.view">
        <field name="name">library.editorial.tree</field>
        <field name="model">library.editorial</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="library_editorial_form" model="ir.ui.view">
        <field name="name">library.editorial.form</field>
        <field name="model">library.editorial</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="book_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_library_editorial" model="ir.actions.act_window">
        <field name="name">Editorials</field>
        <field name="res_model">library.editorial</field>
        <field name="view_mode">tree,form</field>
    </record>

   

</odoo>
